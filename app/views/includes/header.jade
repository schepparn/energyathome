      .container
        .navbar-header
          button.navbar-toggle(type='button' ng-init='navbarCollapsed' ng-click='navbarCollapsed=!navbarCollapsed')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='/') energyathome
